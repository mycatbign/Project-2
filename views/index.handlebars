<div id="home">
  {{!-- sign in modal --}}
  <div class="modal fade  " id="sign-in-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Sign in</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

          <div id="sign-in-text">
            <p>Enter your information below to sign in</p>
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <label data-error="wrong" data-success="right" for="defaultForm-email">Your Username</label>
              <input type="username" class="user-login-info" id="defaultForm-user" class="form-control validate">
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Your password</label>
              <input type="password" class = "password-login-info" id="defaultForm-Pass" class="form-control validate">
            </div>
            <div class="modal-footer">
              <div id="switch-sign-up">New User</button>
                <button type="button" id="start-sign-in" class="btn btn-primary">Sign In</button>
                <button type="submit" id="close-modal" class="btn btn-primary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>

          <div id="sign-up-text">
            <p>Enter your information below to sign up</p>
            <div class="md-form mb-5">
              <i class="fas fa-envelope prefix grey-text"></i>
              <label data-error="wrong" data-success="right" for="defaultForm-email">Create Username</label>
              <input type="username" class="user-login-info" id="defaultForm-new-user" class="form-control validate">
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Create password</label>
              <input type="password" class = "password-login-info" id="defaultForm-new-pass" class="form-control validate">
            </div>

            <div class="md-form mb-4">
              <i class="fas fa-lock prefix grey-text"></i>
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Tell us a bit about yourself</label>
              <input type="info" id="defaultForm-new-info" class="form-control validate">
            </div>

            <div class="modal-footer">
              <div id="return-to-sign-in">Return to Sign In
              </div>

              <button type="button" id="start-sign-up" class="btn btn-primary">Sign Up</button>
              <button type="submit" id="close-modal" class="btn btn-primary" data-dismiss="modal">Close</button>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {{!-- ************************* --}}
  <div class="container">
    <div class="row">
      <div class="col-2">
        <div id="element" class="btn btn-default sign-in">Sign in</div>
      </div>
      <div class="col-2">
        <div id="element" class="btn btn-default sign-up">Sign up</div>
      </div>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Take a hike!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Example Text</label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.Name}}</a>
             <strong>Elevation</strong>: {{this.Elevation}}
             <button class="btn float-right ">Check box</button>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="test"></div>
</div>
